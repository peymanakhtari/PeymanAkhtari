
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
     <link rel="stylesheet" href="/css/admin.css">
</head>
<div>
    <form asp-action="Login" asp-controller="Admin" method="post" id="adminForm">
        <div  class="form-group ">
            <input class="form-control" name="username" id="username" placeholder="نام کاربری" />
            <input type="password" class="form-control" name="password" id="password" placeholder="کلمه عبور " />
            <input type="submit" class="btn btn-primary"  value="ورود" />
        </div>
    </form>
</div>