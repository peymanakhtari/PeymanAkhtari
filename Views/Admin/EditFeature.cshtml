@using PeymanAkhtari.Models
@model Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>EditFeature</h1>

<div  class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" method="post" asp-action="EditFeature">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <input asp-for="Id" hidden  />
              <input asp-for="ProjectId" class="form-control"  hidden />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Text1" class="control-label"></label>
                <textarea asp-for="Text1" class="form-control" rows="8" ></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Text2" class="control-label"></label>
                <textarea asp-for="Text2" class="form-control" rows="8" ></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="img1" class="control-label"></label>
                <input asp-for="img1" type="file" class="form-control" />
                <span asp-validation-for="img1" class="text-danger"></span>
            </div>
                 <div class="form-group">
                <label asp-for="img2" class="control-label"></label>
                <input asp-for="img2" type="file" class="form-control" />
                <span asp-validation-for="img2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sequence" class="control-label"></label>
                <input asp-for="Sequence" class="form-control" />
                <span asp-validation-for="Sequence" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="img1Class" class="control-label"></label>
                <input asp-for="img1Class" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Img2Class" class="control-label"></label>
                <input asp-for="Img2Class" class="form-control" />
            </div>
           <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
            
    </div>
</div>

<div class="m-2">
    <a onclick="history.back()">Back to List</a>
</div>

